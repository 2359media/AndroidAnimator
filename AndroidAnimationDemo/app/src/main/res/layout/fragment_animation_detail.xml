<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:id = "@+id/fragment_animation_frame"
             android:layout_height="match_parent"
             tools:context="com.easyandroidanimations.demo.AnimationDetailFragment" >

    <ImageView
            android:id="@+id/imgBehind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/img4"
            android:contentDescription="image to flip to" />

    <ImageView
            android:id="@+id/imgTarget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/img1"
            android:contentDescription="image to animate" />

    <ImageView
            android:id="@+id/imgPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/play_button"
            android:contentDescription="play button to start animation" />

    <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:text="TARGET"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"

            android:layout_margin="10dp"
            android:textColor="#ffcc0000"
            android:textAppearance="?android:attr/textAppearanceSmall" />


</FrameLayout>